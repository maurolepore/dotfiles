[user]
	name = Mauro Lepore
	email = maurolepore@gmail.com
[credential]
	helper = cache --timeout=10000000
[push]
	default = current
[core]
	editor = vim
	autocrlf = input
[alias]
	a = add .
	ac = !git add . && git commit
	acnv = !git add . && git commit --no-verify
	bv = branch -vv
	cam = commit -am
	ca = commit --amend
	cae = commit --allow-empty -m 'Empty commit'
	cb = checkout -b
	cg = config --global
	cga = config --global --get-regex alias
	cgl = config --global --list
	cH = checkout HEAD .
	cm = commit -m
	d = diff
	dc = diff --cached
	ds = diff --staged
	dst = diff --stat
	dw = diff --word-diff
	l = log --oneline --graph --decorate -n 5
	lnm = log --oneline --graph --decorate -n 5 --no-merges
	ll = log --oneline --graph --decorate
	ls = ls-files
	lst = log --stat
	l-s = l -S
	pr = pull --rebase
	ra = rebase --abort
	ri = rebase -i
	rim = rebase -i master
	rv = remote -v
	s = status -s
	rHm = rebase HEAD master
	c = checkout
[rerere]
	enabled = true
	autoupdate = true
[fetch]
	prune = 1
[help]
	format = man
[usethis]
[pull]
	ff = only
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
